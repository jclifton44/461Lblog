<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>PogsBlog</servlet-name>
		<servlet-class>com.example.pogsBlog.PogsBlogServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PogsBlog</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>addPost</servlet-name>
		<servlet-class>com.example.pogsBlog.addPost</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addPost</servlet-name>
		<url-pattern>/addPost</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>email</servlet-name>
		<servlet-class>com.example.pogsBlog.sendEmails</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>email</servlet-name>
		<url-pattern>/emails</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>sub</servlet-name>
		<servlet-class>com.example.pogsBlog.addSub</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>sub</servlet-name>
		<url-pattern>/subscribe</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
</web-app>
